{
  // 1. **CHANGE PARSER**
  "parser": "@typescript-eslint/parser",
  "extends": [
    "airbnb",
    "prettier",
    "plugin:node/recommended",
    "plugin:prettier/recommended",

    "plugin:@typescript-eslint/recommended", // Base TypeScript rules
    "airbnb-typescript/base" // Airbnb rules tailored for TypeScript/ESM
  ],
  "plugins": [
    "prettier",
    "@typescript-eslint" // Include the TS plugin
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "env": {
    "es2021": true,
    "node": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".mjs", ".jsx", ".ts", ".tsx"]
      }
    }
  },
  "rules": {
    "no-unused-vars": "off",
    "consistent-return": "off",

    "@typescript-eslint/no-unused-vars": [
      "warn",
      { "argsIgnorePattern": "req|res|next|val" }
    ],

    "node/no-unsupported-features/es-syntax": "off",
    "node/no-missing-import": "off",

    "prettier/prettier": "off",
    "spaced-comment": "off",
    "no-console": "warn",
    "func-names": "off",
    "object-shorthand": "off",
    "no-process-exit": "off",
    "no-param-reassign": "off",
    "no-return-await": "off",
    "no-underscore-dangle": "off",
    "class-methods-use-this": "off",
    "prefer-destructuring": ["error", { "object": true, "array": false }],

    // Keep your import extensions logic (already configured for TS)
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "always",
        "mjs": "always",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ]
  }
}
